
<h3> Articles under this category </h3>

<p>
  <strong>Name:</strong>
  <%= @category.name %>
</p>

<% Article.where(category_id: @category.id).each do |article| %>
<p> <%= article.title %> </p>
<p> <%= article.body %> </p>
<% end %>


<%= link_to 'Edit', edit_category_path(@category) %> |
